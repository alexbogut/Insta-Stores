model Message {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  text        String
  createdAt   DateTime @default(now())
  author      User     @relation(fields: [authorId], references: [id], "SentMessages")
  authorId    String   @db.ObjectId
  recipient   User     @relation(fields: [recipientId], references: [id], "RecievedMessages")
  recipientId String   @db.ObjectId
}

model Item {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  caption  String
  imageURL String
  username String
  owner    User   @relation(fields: [ownerId], references: [id], "OwnedItems")
  ownerId  String @db.ObjectId
}
